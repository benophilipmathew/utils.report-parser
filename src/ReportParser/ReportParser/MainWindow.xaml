            <TextBlock Grid.Row="0" 
                       Text="{Binding ProcessingDetail, Mode=TwoWay, NotifyOnSourceUpdated=True}"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       Margin="15px 0 0 30px" 
                       FontSize="12px"
                       FontFamily="calibri" 
                       FontStyle="Italic"
                       Foreground="{StaticResource SecondaryDarkCB}"
