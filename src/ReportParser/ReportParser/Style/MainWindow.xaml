<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    
    <Style x:Key="MainWindowStyle" TargetType="controls:MetroWindow">
        <Setter Property="WindowTitleBrush" Value="{StaticResource WhiteCB}" />
        <Setter Property="TitleForeground" Value="{StaticResource SecondaryDarkCB}" />
        <Setter Property="Background" Value="{StaticResource WhiteCB}" />
        <Setter Property="GlowBrush" Value="{StaticResource SecondaryLightCB}" />
        <Setter Property="Padding" Value="10" />
    </Style>
    
    <Thickness x:Key="MainWindowBorderThickness" Top="1" Left="1" Right="1" Bottom="1"></Thickness>
    
</ResourceDictionary>